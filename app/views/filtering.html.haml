%section.dev( ng-show="true" )
  %h3 Filter
  %input( ng-model="data.input" ng-change="")


%section.master
  %h2( ng-show="false" ) Hits

  %ul.hit-list( ng-show_="view_model.hits.length > 0" )

    -# real stacks
    %li.item( data-ng-repeat="item in view_model.hits"
      ng-mouseover="preview(item)"
      ng-class="classname(item)"
    )
      -# ng-mouseleave="hide_preview(item)"

      -# render a stack
      %a( href="{{item.url}}" title="{{item.name}}")
        %img.hit-icon( ng-src="{{item.thumbnail_url}}")
        %p {{item.name}}
        %p {{item.last_accessed_timestamp}}

    -### enable this to show a 'more...' button.
    -# %li.item( ng-show="view_model.hits.length > view_model.limit" )
    -#   %p More...

    -# separators between stack groups TODO

    -# %li.item( ng-show="view_model.pages.length > view_model.limit" )
    -#   %p More...


    -# smart stacks
    %li.item.highlights( ng-show_="view_model.hits.length == 0")
      %h3 Placeholder
      %p TODO Matching snippets to show here.

    %li.item.search-suggestions( ng-show_="view_model.hits.length == 0")
      %h3 Placeholder
      %p TODO Suggested searches stack to show here.

-# display details for the highlighted item in results
%section.details
  %h2 {{view_model.details.name}}

  %ul.detail-list
    %li.item.thumbnail( ng-repeat="detail_item in view_model.details.items" )
      %a( href="{{detail_item.url}}" title="{{detail_item.name}}")
        %img( ng-src="{{detail_item.thumbnail_url}}" )
        %p {{detail_item.name}}


%section.suggestions( ng-show="false" )
  %h2 Suggestions

  %ul.suggestion-list(  )

    %li.item( data-ng-repeat="item in data.suggestions"

      )
      %p {{item}}


%section.evaluator
  .evaluator( ng-include="'views/eval.html'" ng-controller="EvalCtrl" )


