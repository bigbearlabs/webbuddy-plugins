%section.dev(ng-show="$window.chrome != null")
  %h3 Filter
  %input( ng-model="data.input" ng-change="")

  %h3 Evaluator
  %input( ng-model="dev_input" ng-change="evaluate(dev_input)")
  %p {{dev_output}}



%section.searches( ng-show="view_model.searches.length > 0" )
  %h2 Searches

  %ul.search-list

    %li.item( data-ng-repeat="item in view_model.searches | limitTo:view_model.limit"
      ng-click="click_item(item)"
      )

      -# result list item
      %a( href="{{item.url}}")
        %img.search-icon( ng-src="{{item.thumbnail_url}}")
        %p {{item.name}}

      -# zoom-in view
      %ul.thumbnails
        %li.thumbnail( data-ng-repeat="page_item in item.pages" )
          %a( href="{{page_item.url}}")
            %img( ng-src="{{page_item.thumbnail_url}}")
            %p {{page_item.name}}

    %li.item( ng-show="view_model.searches.length > view_model.limit" )
      %p More...


-# design note: in order to reduce info that has to be processed at a glance, we need to move these entities into interaction results in a coarser-grain entity. Candidates: hanging them off searches or keywords.
%section.pages( ng-show="view_model.pages.length > 0" )
  %h2 Pages

  %ul.page-list(  )

    %li.item( data-ng-repeat="item in view_model.pages | limitTo:view_model.limit"
      )
      %a( href="{{item.url}}")
        %img( ng-src="{{item.thumbnail_url}}")
        %p {{item.name}}

        .thumbnails
          .thumbnail
            %a( href="{{item.url}}")
              %img( ng-src="{{item.thumbnail_url}}")
              %p {{item.name}}

    %li.item( ng-show="view_model.pages.length > view_model.limit" )
      %p More...


%section.suggestions( style="display:none;" )
  %h2 Search suggestions for '{{data.input}}'

  %ul.suggestion-list(  )

    %li.item( data-ng-repeat="item in data.suggestions"

      )
      %p {{item}}


%section.highlights( )
  %h2 Highlighted content for '{{data.input}}'

  %ul.highlight-list(  )

    %li.item( data-ng-repeat="item in data.highlights"

      )
      %p {{item}}


